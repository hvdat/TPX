<!-- Start wrapper-->
<div id="wrapper">

    <!--Start sidebar-wrapper-->
    <div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
        <div class="brand-logo">
            <a href="/">
                <img src="https://i.imgur.com/owygF8v.png" class="logo-icon" alt="logo icon">
                <h5 class="logo-text">TPX Admin</h5>
