                        <li class="dropdown-item"><i class="flag-icon flag-icon-de mr-2"></i> German</li>
                    </ul>
                </li>
                <li class="nav-item dropdown-lg">
                    {{#if user}}
                    <span class="mt-2 user-title">chào, {{user.username}}</span>
                    <h6 class="mt-2 user-title"><a href="/logout">Logout</a> </h6>
                    {{else}}
                    <h6 class="mt-2 user-title"><a href="/login">Login</a></h6>
                    {{/if}}
                </li>
            </ul>
        </nav>
    </header>
    <!--End topbar header-->

    <div class="clearfix"></div>
    {{#if user}}
    <div class="content-wrapper">
        <div class="container-fluid">

            <div class="row mt-3">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Danh Sách Sản Phẩm</h5>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Name</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Description</th>
                                            <th scope="col">Image URL</th>
                                            <th scope="col">Category</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#products}}
                                        <tr>
                                            <td>{{name}}</td>
                                            <td>{{price}}</td>
                                            <td>{{desc}}</td>
                                            <td>{{img}}</td>
                                            <td>{{category}}</td>
                                        </tr>
                                        {{/products}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End Row-->


                <!--start overlay-->
                <div class="overlay toggle-menu"></div>
                <!--end overlay-->

            </div>
            <!-- End container-fluid-->

        </div>
        <!--End content-wrapper-->
        
        <!--Pagination -->
        <div class="row">
          <div class="col-lg-12 text-center">
            <div class="pagination-wrap">
              <ul>
                <li><a href="/list?page={{prevPage}}">Prev</a></li>
                {{#pages}}
                  <li><a href="/list?page={{.}}">{{.}}</a></li>
                {{/pages}}
                <li><a href="/list?page={{nextPage}}">Next</a></li>
              </ul>
            </div>
          </div>
        </div>
        <!--End Pagination -->
        {{else}}
        <h1 class="content-wrapper">WARNING: UNAUTHORIZED ACCESS!<br> Please <a href="/login"
                style="color:crimson;"><strong>LOGIN</strong></a> to use this function!</h1>
        {{/if}}


