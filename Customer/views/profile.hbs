<link rel="stylesheet" href="css/profile.css">
<!-- header -->
<div class="top-header-area" id="sticker">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12 text-center">
                <div class="main-menu-wrap">
                    <!-- logo -->
                    <div class="site-logo">
                        <a href="/">
                            <img style="max-width: 50%" src="https://i.imgur.com/owygF8v.png" alt=""/>
                        </a>
                    </div>
                    <!-- logo -->

                    <!-- menu start -->
                    <nav class="main-menu">
                        <ul>
                            <li>
                                <a href="/">Trang chủ</a>
                            </li>
                            <li>
                                <a href="/shop">Sản phẩm</a>
                            </li>
                            <li>
                                <a href="/news">Tin tức</a>
                            </li>
                            <li class="current-list-item"><a href="/contact">Liên hệ</a></li>
                            <li><a href="/about">Giới thiệu</a></li>
                            <li>
                                <div class="header-icons">
                                <a class="shopping-cart" href="/cart"><i
                                        class="fas fa-shopping-cart"
                                ></i>
                                    {{#if cartLength}}
                                        <span class='badge badge-warning cart-count'
                                              id='lblCartCount'> {{cartLength}} </span></a>
                                    {{else}}
                                        <span class='badge badge-warning cart-count'
                                              id='lblCartCount'> 0 </span></a>
                                    {{/if}}
