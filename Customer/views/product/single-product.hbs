<!-- header -->
<div class="top-header-area" id="sticker">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12 text-center">
                <div class="main-menu-wrap">
                    <!-- logo -->
                    <div class="site-logo">
                        <a href="/">
                            <img style="max-width: 50%" src="https://i.imgur.com/owygF8v.png" alt=""/>
                        </a>
                    </div>
                    <!-- logo -->

                    <!-- menu start -->
                    <nav class="main-menu">
                        <ul>
                            <li class="current-list-item">
                                <a href="/">Trang chủ</a>
                            </li>
                            <li>
                                <a href="/shop">Sản phẩm</a>
                            </li>
                            <li><a href="/contact">Liên hệ</a></li>
                            <li><a href="/about">Giới thiệu</a></li>
                            <li>
                                <div class="header-icons">
                                <a class="shopping-cart" href="/cart"><i
                                        class="fas fa-shopping-cart"
                                ></i>
                                    {{#if cartLength}}
                                        <span class='badge badge-warning cart-count'
                                              id='lblCartCount'> {{cartLength}} </span></a>
                                    {{else}}
                                        <span class='badge badge-warning cart-count'
                                              id='lblCartCount'> 0 </span></a>
                                    {{/if}}
                                    {{#if user}}
                                        <a href="/profile">chào, {{user.name}}!</a>
                                        <a class="mobile-hide search-bar-icon" href="/logout"><span
                                        >Đăng xuất</span></a>{{else}}
                                        <a class="mobile-hide search-bar-icon" href="/login"><span
                                        >Đăng nhập</span></a>
                                    {{/if}}

                                </div>
                            </li>
                        </ul>
                    </nav>
                    <a class="mobile-show search-bar-icon" href="#"><i
                            class="fas fa-search"
                    ></i></a>
                    <div class="mobile-menu"></div>
                    <!-- menu end -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end header -->
<!-- breadcrumb-section -->
{{#product}}
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Chi Tiết Sản Phẩm</p>
                        <h1>{{name}}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb section -->

    <!-- single product -->
    <div class="single-product mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="single-product-img">
                        <img src="{{img}}" alt=""/>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="single-product-content">
                        <h3>{{name}}</h3>
                        <p class="single-product-pricing"><span>Một Ký</span> {{price}} VNĐ</p>
                        <p>{{desc}}</p>
                        <div class="single-product-form">
                            <form action="index">
                                <input type="number" placeholder="0"/>
                            </form>
                            <a href="/cart" class="cart-btn"><i
                                    class="fas fa-shopping-cart"
                            ></i>
                                Thêm vào Giỏ Hàng</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end single product -->
{{/product}}

