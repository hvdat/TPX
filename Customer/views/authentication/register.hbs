<div class="login-clean">
  <form method="post">
    <h2 class="text-center">Đăng Ký</h2>
    <div class="form-group"><input
        class="form-control"
        type="text"
        name="username"
        placeholder="Họ tên"
      /></div>
    <div class="form-group"><input
        class="form-control"
        type="password"
        name="password"
        placeholder="Mật khẩu"
      /></div>
    <div class="form-group"><input
        class="form-control"
        type="email"
        name="email"
        placeholder="Email"
        id="email"
      /></div>
    <div class="form-group"><input
        class="form-control"
        type="text"
        name="tel"
        placeholder="Số điện thoại"
      /></div>
    <div class="form-group"><button
        class="btn btn-primary btn-block"
        type="submit"
      >Đăng Ký</button></div>
  </form>
</div>
{{#section "script"}}

  <script type="application/javascript">
    $('#email').on('input',function(){
    $.getJSON('/api/check-email-exist/'+this.value,function(isExist){
    if(isExist){ $('#email').addClass('is-invalid'); }else{
    $('#email').removeClass('is-invalid');$('#email').addClass('is-valid'); } })
    });
  </script>

{{/section}}